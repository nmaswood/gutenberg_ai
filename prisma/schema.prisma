datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id            Int     @id @default(autoincrement())
  title         String
  authors       String
  subjects      String
  bookshelves   String
  languages     String
  mediaType     String @map("media_type")
  downloadCount Int     @map("download_count")
  textPath      String? // Path to the text file
}
